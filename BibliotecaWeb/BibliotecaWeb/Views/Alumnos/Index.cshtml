@model IEnumerable<BibliotecaWeb.Models.Alumnos>

@{
    ViewBag.Title = "Index";
}

<h2>Formulario de registro</h2>


<p>
   <a class="btn btn-success" @Html.ActionLink("Registrar nuevo", "Create")
</p>
<hr />
<table class="table table-bordered table-responsive table-hover">
  
    
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Legajo)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DNI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Domicilio)
        </th>
        <th>
           Fecha de emisión
        </th>        
        <th></th>
       
    </tr>

    

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Legajo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DNI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Domicilio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Socio)
        </td>
        <td>
            <a class="btn btn-primary" @Html.ActionLink("Editar", "Edit", new { id = item.NroLector }) 
            @*<a class="btn-primary btn-lg" @Html.ActionLink("Detalles", "Details", new { id = item.NroLector })*@ 
            <a class="btn btn-danger" @Html.ActionLink("Eliminar", "Delete", new { id = item.NroLector })
        </td>
    </tr>
}

</table>
